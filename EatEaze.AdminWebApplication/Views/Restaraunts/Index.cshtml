@model IEnumerable<EatEaze.Data.Entities.Restaraunt>

@{
    ViewData["Title"] = "Restaraunts";
}

<h1>Restaraunts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RestarauntName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RestarauntName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RestarauntId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RestarauntId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RestarauntId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
